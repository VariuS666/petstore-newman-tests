      "item": [
        {
          "name": "POST Create Pet",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "const json = pm.response.json();",
                  "pm.test('Pet created with correct id', () => {",
                  "  pm.expect(json.id).to.eql(Number(pm.environment.get('petId')));",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const id = Date.now();\r",
                  "pm.environment.set(\"petId\", id.toString());\r",
                  "pm.environment.set(\"petName\", \"qa-pet-\" + id);\r",
                  "pm.environment.set(\"petStatus\", \"available\");\r",
                  ""
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": {{petId}},\n  \"name\": \"{{petName}}\",\n  \"status\": \"{{petStatus}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pet",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "pet"
              ]
            }
          },
          "response": []
        },
